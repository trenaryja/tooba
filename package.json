{
  "private": true,
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "lint": "turbo lint",
    "clean": "turbo clean",
    "format": "prettier --write \"**/*.{ts,tsx,md}\""
  },
  "devDependencies": {
    "eslint": "^8.47.0",
    "eslint-config-custom": "workspace:0.0.0",
    "prettier": "^3.0.2",
    "prettier-plugin-tailwindcss": "^0.5.3",
    "turbo": "^1.10.13"
  },
  "packageManager": "pnpm@7.15.0",
  "prettier": {
    "jsxSingleQuote": true,
    "printWidth": 120,
    "semi": false,
    "singleQuote": true,
    "trailingComma": "all"
  },
  "eslintConfig": {
    "root": true,
    "extends": [
      "custom"
    ],
    "settings": {
      "next": {
        "rootDir": [
          "apps/*/"
        ]
      }
    }
  }
}
